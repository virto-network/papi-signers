  "dependencies": {
    "@polkadot-labs/hdkd": "^0.0.22",
    "polkadot-api": "^1.11.0",
    "scale-ts": "^1.6.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "esmock": "^2.7.0",
    "sinon": "^20.0.0"
  },
  "repository": {
    "url": "https://github.com/virto-network/papi-signers",
