{
  "name": "virto-papi-signers",
  "homepage": "https://virtonetwork.github.io/papi-signers/",
  "private": "true",
  "workspaces": [
    "e2e-tests",
    "signer",
    "authenticators/*"
  ],
  "scripts": {
    "test": "npm test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "publish-all": "npm publish --workspaces --if-present",
    "release": "changeset publish",
    "check": "npx @biomejs/biome check .",
    "format": "npx @biomejs/biome check --write .",
    "docs:gen": "tsx scripts/generate-docs.ts && typedoc",
    "docs:dev": "npm run docs:gen && vitepress dev docs",
    "docs:build": "npm run docs:gen && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@changesets/cli": "^2.29.8",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.28"
  }
}
